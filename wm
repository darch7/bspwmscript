#!/bin/sh

sudo -v
while true; do
  sudo -nv; sleep 1m
  kill -0 $$ 2>/dev/null || exit
done &

#Instalar bspwmbydarch
cd 
sudo pacman -S bspwm sxhkd --noconfirm --needed
git clone https://github.com/darch7/bspwmbydarch
cp -R bspwmbydarch/config/* ~/.config 
cp -R bspwmbydarch/.local ~/ 
cp -R bspwmbydarch/home/* ~/ 
cd bspwmbydarch/compilar/st 
sudo make install 
cd 
mkdir -p ~/.local/share/fonts
cd ~/.local/share/fonts && curl -fLo "Droid Sans Mono for Powerline Nerd Font Complete.otf" https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/DroidSansMono/complete/Droid%20Sans%20Mono%20Nerd%20Font%20Complete.otf 
cd
sudo pacman -S zsh-theme-powerlevel10k papirus-icon-theme p7zip unrar zip unzip gzip bzip2 alsa-plugins alsa-utils ttf-dejavu ttf-liberation ttf-bitstream-vera wmname rofi lxrandr polkit-gnome ueberzug slock fzf wireless_tools telegram-desktop neofetch calcurse bc pcmanfm xarchiver lxappearance leafpad transmission-gtk nitrogen pavucontrol geany neovim sxiv blueberry ffmpeg maim xclip xdotool mpv unclutter dunst zathura zathura-pdf-mupdf htop zsh zsh-autosuggestions zsh-history-substring-search zsh-completions zsh-syntax-highlighting ranger ttf-joypixels adobe-source-han-sans-jp-fonts lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings adobe-source-han-serif-jp-fonts awesome-terminal-fonts ttf-font-awesome chromium --needed --noconfirm 
sudo systemctl enable lightdm
sudo cp -R bspwmbydarch/root/fzf/* /usr/share/fzf
sudo cp -R bspwmbydarch/root/gtk/iconos/* /usr/share/icons
sudo cp -R bspwmbydarch/root/gtk/temas/* /usr/share/themes
sudo cp -R bspwmbydarch/root/wall/* /usr/share/
yay -S ttf-meslo-nerd-font-powerlevel10k picom-ibhagwan-git polybar-git fzf-extras --noeditmenu --noconfirm 

clear

neofetch
sleep 5

echo "BspwmbyDarch instalado"
sleep 5
clear
reboot
