#!/bin/sh

#Instalar bspwmbydarch 
git clone https://github.com/darch7/bspwmbydarch ; cp -R bspwmbydarch/config/* ~/.config ; cp -R bspwmbydarch/.local ~/ ; cp -R bspwmbydarch/pegarenhome/* ~/ ; cd bspwmbydarch/compilar/st ; sudo make install ; cd ; mkdir -p ~/.local/share/fonts ; cd ~/.local/share/fonts && curl -fLo "Droid Sans Mono for Powerline Nerd Font Complete.otf" https://github.com/ryanoasis/nerd-fonts/raw/master/patched-fonts/DroidSansMono/complete/Droid%20Sans%20Mono%20Nerd%20Font%20Complete.otf ; sudo pacman -S zsh-theme-powerlevel10k papirus-icon-theme p7zip unrar zip unzip gzip bzip2 gtk3-nocsdlzop alsa-plugins alsa-utils ttf-dejavu ttf-liberation ttf-bitstream-vera wmname rofi lxrandr polkit-gnome ueberzug slock fzf wireless_tools redshift telegram-desktop neofetch calcurse bc pcmanfm xarchiver lxappearance leafpad transmission-gtk nitrogen pavucontrol geany neovim sxiv blueberry ffmpeg maim xclip xdotool mpv unclutter dunst zathura zathura-pdf-mupdf htop zsh zsh-autosuggestions zsh-history-substring-search zsh-completions zsh-syntax-highlighting ranger ttf-joypixels adobe-source-han-sans-jp-fonts lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings adobe-source-han-serif-jp-fonts awesome-terminal-fonts ttf-font-awesome chromium --needed --noconfirm ; sudo systemctl enable lightdm ; gpg --keyserver pool.sks-keyservers.net --recv-keys 931FF8E79F0876134EDDBDCCA87FF9DF48BF1C90 2EBF997C15BDA244B6EBF5D84773BD5E130D1D45 8FD3D9A8D3800305A9FFF259D1742AD60D811D58 ; yay -S ttf-meslo-nerd-font-powerlevel10k picom-ibhagwan-git polybar-git fzf-extras --noeditmenu --noconfirm ; yay -S spotify spotify-adblock-linux --noeditmenu --noconfirm --needed 

clear

echo "Depenencicias instaladas."
sleep 5
clear
